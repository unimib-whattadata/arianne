{
  "dependencies": {
    "drizzle-orm": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@arianne/eslint-config": "workspace:*",
    "@arianne/prettier-config": "workspace:*",
    "@arianne/tsconfig": "workspace:*",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./src/client.ts"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "default": "./src/schema.ts"
    },
    "./schemas/*": {
      "types": "./dist/schemas/*.d.ts",
      "default": "./src/schemas/*.ts"
    },
    "./enums": {
      "types": "./dist/enums.d.ts",
      "default": "./src/enums.ts"
    }
  },
  "license": "MIT",
  "name": "@arianne/db",
  "prettier": "@arianne/prettier-config",
  "private": true,
  "scripts": {
    "build": "pnpm with-env tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "pnpm with-env tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "db:generate": "pnpm with-env drizzle-kit generate --name",
    "db:migrate": "pnpx supabase db push",
    "db": "pnpx supabase",
    "db:studio": "pnpm with-env drizzle-kit studio",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "infisical run --path='/db' --",
    "db:utils": "pnpm with-env pnpm dlx tsx ./src/utils.ts"
  },
  "type": "module",
  "version": "0.1.0"
}